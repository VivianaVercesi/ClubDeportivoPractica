<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#041120"
    tools:context=".PaymentReceipt">


    <ImageView
        android:id="@+id/imgLogotype"
        android:layout_width="211dp"
        android:layout_height="107dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#F0F3F6"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="179dp">



        <TextView
            android:id="@+id/PaymentReceipt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="16dp"
            android:text="DD/MM/AAAA"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/imgLogotype"
            app:layout_constraintStart_toStartOf="parent" />



        <TextView
            android:id="@+id/txtComprobanteNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comprobante N°:"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtComprobanteNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="Ingrese número"
            android:textColor="#000000"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/txtClienteNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N° de cliente:"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtClienteNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="Ingrese número"
            android:textColor="#000000"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/txtNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre:"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="Ingrese nombre"
            android:textColor="#000000"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/txtDNI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DNI:"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtDNI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="Ingrese DNI"
            android:textColor="#000000"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/txtTipoPago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de pago:"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtTipoPago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="Ingrese tipo de pago"
            android:textColor="#000000"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/txtMonto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monto:"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtMonto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="Ingrese monto"
            android:textColor="#000000"
            android:textSize="18sp" />

    </LinearLayout>


    <Button
        android:id="@+id/btnBack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="#6393B5"
        android:fontFamily="@font/audiowide"
        android:includeFontPadding="true"
        android:text="VOLVER"
        android:textAlignment="center"
        android:textColor="#041120"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>
